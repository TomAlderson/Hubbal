<%= page('book','Courses','Subjects of teaching.') %>

<div class="row">
  <% @courses.each do |course| %>
      <%= link_to(course) do %>
        <div class="col-md-4">
        <div class="box">
          <div class="box-header with-border">
            <h3 class="box-title"><i class="fa fa-graduation-cap"></i> <%= course.name %></h3>
          </div>
          <div class="box-body">
            <table class="table table-striped">
              <thead>
                <tr></tr>
              </thead>
              <tbody>
                <tr>
                  <td><strong>Head of Course</strong></td>
                  <td><%= course.teacher %></td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <% end %>
  <% end %>
</div>