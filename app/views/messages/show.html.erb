<%= page('envelope',@message.subject,'') %>

<% params[:sender_id] == @message.sender_id %>

<div class="box-body">
	<div class="form-group">
		<div class="col-md-12">
			<label>Sent By</label>
			<div class="form-control"><%= @message.sender %></div>
		</div>
	</div>
	<div class="form-group">
		<div class="col-md-12" style="margin-top: 16px;">
			<label>Message</label>
			<div class="form-control"><%= @message.content.html_safe %></div>
		</div>
	</div>
</div>
